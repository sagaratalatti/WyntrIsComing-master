<resources>

    <style name="Peepster.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogFragment" parent="Peepster.Base">
    <item name="android:windowBackground">@color/colorPrimaryDark</item>
    <item name="android:colorBackgroundCacheHint">@color/colorPrimaryDark</item>
</style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

</resources>
